<!DOCTYPE html>
<html>
  <head>
    <title>SecretHacker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= analytics_init if Rails.env.production? %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet"></link>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>

    	body {
    		background: white;
    	}
    		h1, h2, h3 {
    			color: black;
  		}
  		p {
  			color:black;
  		}
  		a {
  			color: blue;
  		}

      .header-link {
        text-decoration: none;
        color: black
      }

    </style>
  </head>

  <body>
  <h1><a href='/' class="header-link">SECRET HACKER</a></h1>

  <% if !logged_in? %>
    <h2> Let's share some secrets...</h2>
  <% end %>

  <ul style="display: inline;">
  	<% if logged_in? %>
      <%= link_to "Dashboard", dashboard_path %> |
      <%= link_to "New Secret", new_secret_path %> |
      <%= link_to "View Secrets", secrets_path %> |
  		<%= link_to "Secrets Leaderboard", users_path %> |
  		<%= link_to "Logout", logout_path %>
		<% end %>
  	<% if !logged_in? %>
      <%= link_to "Home", '/' %> |
  		<%= link_to "Login!", login_path %> |
  		<%= link_to "Sign Up!", signup_path %>
		<% end %>

  </ul>



    <%= yield %>
  </body>
</html>
