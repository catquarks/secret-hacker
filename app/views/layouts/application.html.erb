<!DOCTYPE html>
<html>
  <head>
    <title>SecretHacker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= analytics_init if Rails.env.production? %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet"></link>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">

    <style>

    	body {
        font-family: 'Raleway', sans-serif;
        text-align: center;
    		background: #5E5E5E;
    	}
    		h1, h2, h3 {
    			color: #579981;
  		}
      h1 .header-link {
        color: #359C76;
      }
  		p {
  			color: #000;
  		}
  		a {
  			color: #fff;
  		}

      .header-link {
        text-decoration: none;
        color: black
      }

      table {
        text-align: left;
        margin: auto;
      }

    </style>
  </head>

  <body>
  <h1><a href='/' class="header-link">SECRET HACKER</a></h1>

  <ul style="display: inline;">
  	<% if logged_in? %>
      <%= link_to "Dashboard", dashboard_path %> |
      <%= link_to "New Secret", new_key_path %> |
      <%= link_to "View Secrets", secrets_path %> |
  		<%= link_to "Secrets Leaderboard", users_path %> |
      <%= link_to "Secret Categories", categories_path %> |
      <% if current_user.admin %>
      <%= link_to "All Secrets", all_secrets_path %> |
      <% end %>
      <%= link_to "Logout", logout_path%>
		<% end %>
  	<% if !logged_in? %>
      <%= link_to "Home", '/' %> |
  		<%= link_to "Login!", login_path %> |
  		<%= link_to "Sign Up!", signup_path %>
		<% end %>

  </ul>



    <%= yield %>
  </body>
</html>
